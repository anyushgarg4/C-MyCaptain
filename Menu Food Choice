#include<stdio.h>
main()
{
	printf("Pick an item: \n1. Pizza of Rs200\n2. Burger of Rs90\n3. Pani Puri of Rs40\n4. Samosas of Rs30\n5. Noodles of Rs120");
	int choice;
	scanf("%d",&choice);
	switch(choice)
	{
		case 1:
			printf("You picked Pizza which is of 200 ");
			break;
		case 2:
			printf("You picked Burger which is of 90 ");
			break;
		case 3:
			printf("You picked Pani Puri which is of 40 ");
			break;
		case 4:
			printf("You picked Samosas which is of 30 ");
			break;
		case 5:
			printf("You picked Noodles which is of 120 ");
			break;
		default : printf("Invalid Number sir Please Choose wisely between 1-5");
	}
}
